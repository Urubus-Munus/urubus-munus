{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": ["es2018"],
    "strict": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["./modules/*"],
      "@shared/*": ["./shared/*"],
      "@tests/*": ["./tests/*"],
      "@env/*": ["./env/*"],
      "@infra/*": ["./infra/*"],
      "@functions/*": ["./functions/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
